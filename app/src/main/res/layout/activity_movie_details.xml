<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MovieDetailsActivity"
    android:background="#17181D">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/movie_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_launcher_background"
        app:riv_corner_radius="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"/>



        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/movie_image"
            app:layout_constraintTop_toBottomOf="@id/movie_image"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            tools:text="title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_rate_tv"
        app:layout_constraintStart_toStartOf="@id/movie_title"
        app:layout_constraintTop_toBottomOf="@id/movie_title"
        android:drawableLeft="@drawable/ic_favorito"
        android:text="rate"
        android:gravity="center"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        android:textColor="#C1BDBD"/>

        <TextView
            android:id="@+id/movie_overview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="movie overview"
            app:layout_constraintTop_toBottomOf="@id/movie_rate_tv"
            app:layout_constraintStart_toStartOf="@id/movie_rate_tv"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>